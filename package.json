{
    "name": "vscode-azurespringcloud",
    "displayName": "Azure Spring Cloud",
    "description": "%azureSpringCloud.description%",
    "version": "0.1.0-alpha",
    "publisher": "ms-azuretools",
    "icon": "resources/springCloud.png",
    "aiKey": "AIF-d9b70cd4-b9f9-4d70-929b-a071c400b217",
    "engines": {
        "vscode": "^1.48.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vscode-azurespringcloud"
    },
    "galleryBanner": {
        "color": "#3a3d41",
        "theme": "dark"
    },
    "homepage": "https://github.com/Microsoft/vscode-azurespringcloud/blob/main/README.md",
    "license": "SEE LICENSE IN LICENSE.md",
    "categories": [
        "Azure"
    ],
    "keywords": [
        "Azure",
        "multi-root ready"
    ],
    "preview": true,
    "activationEvents": [
        "onFileSystem:azureSpringCloud",
        "onCommand:azureSpringCloud.loadMore",
        "onCommand:azureSpringCloud.openInPortal",
        "onCommand:azureSpringCloud.refresh",
        "onCommand:azureSpringCloud.selectSubscriptions",
        "onCommand:azureSpringCloud.viewProperties",
        "onView:azureSpringCloud"
    ],
    "main": "./main.js",
    "contributes": {
        "commands": [
            {
                "command": "azureSpringCloud.loadMore",
                "title": "%azureSpringCloud.loadMore%",
                "category": "Azure Spring Cloud"
            },
            {
                "command": "azureSpringCloud.openInPortal",
                "title": "%azureSpringCloud.openInPortal%",
                "category": "Azure Spring Cloud"
            },
            {
                "command": "azureSpringCloud.refresh",
                "title": "%azureSpringCloud.refresh%",
                "category": "Azure Spring Cloud",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "azureSpringCloud.selectSubscriptions",
                "title": "Select Subscriptions...",
                "icon": {
                    "light": "resources/light/filter.svg",
                    "dark": "resources/dark/filter.svg"
                }
            },
            {
                "command": "azureSpringCloud.viewProperties",
                "title": "%azureSpringCloud.viewProperties%",
                "category": "Azure Spring Cloud"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "azure",
                    "title": "Azure",
                    "icon": "resources/azure.svg"
                }
            ]
        },
        "views": {
            "azure": [
                {
                    "id": "azureSpringCloud",
                    "name": "Spring Cloud"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "azureSpringCloud.refresh",
                    "when": "view == azureSpringCloud",
                    "group": "navigation@2"
                }
            ],
            "view/item/context": [
                {
                    "command": "azureSpringCloud.selectSubscriptions",
                    "when": "view == azureSpringCloud && viewItem == azureextensionui.azureSubscription",
                    "group": "inline"
                },
                {
                    "command": "azureSpringCloud.openInPortal",
                    "when": "view == azureSpringCloud && viewItem == azureextensionui.azureSubscription",
                    "group": "9@1"
                },
                {
                    "command": "azureSpringCloud.refresh",
                    "when": "view == azureSpringCloud && viewItem == azureextensionui.azureSubscription",
                    "group": "9@2"
                },
                {
                    "command": "azureSpringCloud.viewProperties",
                    "when": "view == azureSpringCloud && viewItem == azureResourceGroup",
                    "group": "9@1"
                },
                {
                    "command": "azureSpringCloud.openInPortal",
                    "when": "view == azureSpringCloud && viewItem == azureResourceGroup",
                    "group": "9@2"
                },
                {
                    "command": "azureSpringCloud.refresh",
                    "when": "view == azureSpringCloud && viewItem == azureResourceGroup",
                    "group": "9@3"
                },
                {
                    "command": "azureSpringCloud.viewProperties",
                    "when": "view == azureSpringCloud && viewItem == azureResource",
                    "group": "9@1"
                },
                {
                    "command": "azureSpringCloud.openInPortal",
                    "when": "view == azureSpringCloud && viewItem == azureResource",
                    "group": "9@2"
                }
            ],
            "commandPalette": [
                {
                    "command": "azureSpringCloud.selectSubscriptions",
                    "when": "never"
                },
                {
                    "command": "azureSpringCloud.refresh",
                    "when": "never"
                },
                {
                    "command": "azureSpringCloud.loadMore",
                    "when": "never"
                }
            ]
        },
        "keybindings": [
            {
                "command": "workbench.view.extension.azure",
                "key": "ctrl+shift+a",
                "mac": "cmd+shift+a",
                "linux": "shift+alt+a"
            }
        ],
        "configuration": [
            {
                "title": "Azure Spring Cloud",
                "properties": {
                    "azureSpringCloud.enableOutputTimestamps": {
                        "type": "boolean",
                        "description": "%azureSpringCloud.enableOutputTimestamps%",
                        "default": true
                    },
                    "azureSpringCloud.deleteConfirmation": {
                        "type": "string",
                        "enum": [
                            "EnterName",
                            "ClickButton"
                        ],
                        "description": "%azureSpringCloud.deleteConfirmation%",
                        "enumDescriptions": [
                            "%azureSpringCloud.deleteConfirmation.EnterName%",
                            "%azureSpringCloud.deleteConfirmation.ClickButton%"
                        ],
                        "default": "EnterName"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run webpack-prod",
        "build": "tsc",
        "cleanReadme": "gulp cleanReadme",
        "compile": "tsc -watch",
        "package": "vsce package",
        "lint": "tslint --project tsconfig.json -t verbose",
        "lint-fix": "tslint --project tsconfig.json -t verbose --fix",
        "listIcons": "gulp listIcons",
        "pretest": "npm run webpack-prod && gulp preTest",
        "test": "node ./out/test/runTest.js",
        "webpack": "npm run build && gulp webpack-dev",
        "webpack-prod": "npm run build && gulp webpack-prod",
        "webpack-profile": "webpack --profile --json --mode production > webpack-stats.json && echo Use http://webpack.github.io/analyse to analyze the stats",
        "all": "npm i && npm run lint && npm test"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.0.1",
        "@types/gulp": "^4.0.6",
        "@types/mocha": "^7.0.2",
        "@types/node": "^12.0.0",
        "@types/vscode": "1.48.0",
        "glob": "^7.1.6",
        "gulp": "^4.0.2",
        "mocha": "^7.1.1",
        "mocha-junit-reporter": "^1.23.1",
        "mocha-multi-reporters": "^1.1.7",
        "ts-node": "^7.0.1",
        "tslint": "^6.0.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "typescript": "^3.8.3",
        "vsce": "^1.71.0",
        "vscode-azureextensiondev": "^0.5.0",
        "vscode-test": "^1.3.0",
        "webpack": "^4.39.3",
        "webpack-cli": "^3.3.7"
    },
    "dependencies": {
        "@azure/arm-appplatform": "^1.0.0",
        "fs-extra": "^8.1.0",
        "vscode-azureextensionui": "^0.34.0",
        "vscode-nls": "^4.1.1"
    },
    "extensionDependencies": [
        "ms-vscode.azure-account"
    ]
}
